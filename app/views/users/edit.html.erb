<h1>Users#edit</h1>

<%= form_with model :@user , url:user_path , method: :patch, local:true do |f| %>

<%= f.label :name %>
<%= f.text_field : name, autofocus: true, placeholder: "名前" %>
<%= f.label :ProfileImage %>
<%= f.file_field : profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <%= f.submit "変更を保存" %>
<% end %>