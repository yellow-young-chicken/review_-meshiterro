
<% if @postimage.errors.any? %>
  <%= @postimage.errors.count %>件のエラー
  <ul>
    <% @postimage.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <%end%>
  </ul>
  <%end%>

<h1>投稿</h1>

<%= form_with model: @postimage, url:postimages_path, method: :post, local:true  do |f| %>
<h4>画像</h4>
<%= f.file_field :image , accept: "image/*" %>
<h4>ショップ名</h4>
<%= f.text_field :shop_name %>
<h4>説明</h4>
<%= f.text_area :caption %>
<%= f.submit "投稿" %>
<%end%>